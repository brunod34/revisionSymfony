{% extends 'base.html.twig' %}

{% block title %}Hello CommentController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>
			{{ title  }}
		</h1>


		<ul>
			<li>
				<label for="">Commentaire : </label><input type="text" value="{{comment.text}}"></li>
			<li>
				<label for="">Score : </label><input type="text" value="{{comment.score}}"></li>
			<li>
				<label for="">créé le :</label><input type="text" value="{{comment.releasedAt|format_date('medium') }}"></li>

		</ul>
	</div>
{% endblock %}

